@model BarbershopWebApplication.Models.Recording
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Спасибо за посещение</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <style>
        body {
            background-color: #343a40; /* Bootstrap bg-dark */
            color: #0d6efd; /* Белый цвет текста */
        }
    </style>
</head>
<body class="text-center bg-dark">
    <h1>Спасибо за запись, @Model.Name!</h1>
    <p>Телефон: @Model.Phone</p>
    <p>Барбер: @Model.Barber.Name</p>
    <p>Услуга: @Model.Service.Title</p>
    <p>Стоимость услуги: @ViewBag.ServicePrice руб</p>
    <p>Дата и время: @Model.Time.ToString("f")</p>
</body>
</html>
