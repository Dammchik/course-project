@{
    Layout = null; // Или задайте путь к вашему шаблону макета, если он есть
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Услуги</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <style>
        body {
            background-color: #343a40; /* bg-dark */
            color: #0d6efd; /* Цвет шрифта */
        }
        /* Стили для таблицы услуг */
        .services-table {
            width: 100%;
            margin-top: 20px;
        }

        .services-table thead {
            background-color: #0d6efd; /* Фон заголовков таблицы */
            color: #ffffff; /* Цвет шрифта заголовков */
        }
        
        .services-table th, .services-table td {
            padding: 10px;
            border: 1px solid #0d6efd; /* Границы ячеек */
        }
        /* Стили для названия услуги */
        .service-name {
            font-weight: bold;
            font-size: 1.2em;
        }
        /* Стили для цены и времени */
        .service-detail {
            font-size: 1em;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center my-4">Услуги</h1>
        <table class="services-table">
            <thead>
                <tr>
                    <th>Стрижки</th>
                    <th>Барбер</th>
                    <th>Старший Барбер</th>
                    <th>Топ Барбер</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="service-name">Мужская стрижка</td>
                    <td class="service-detail">2100 руб<br>45 мин/час</td>
                    <td class="service-detail">2400 руб<br>45 мин/час</td>
                    <td class="service-detail">2800 руб<br>45 мин/час</td>
                </tr>
                <!-- Добавьте остальные услуги по аналогии -->
            </tbody>
        </table>
    </div>
</body>
</html>
