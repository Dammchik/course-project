@{
    Layout = null; // Указываем, что у страницы нет общего шаблона макета
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Услуги</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <style>
        body {
            background-color: #343a40; /* bg-dark */
            color: #0d6efd; /* Цвет шрифта */
        }
        /* Стили для таблицы услуг */
        .services-table {
            width: 100%;
            margin-top: 20px;
        }

            .services-table thead {
                background-color: #0d6efd; /* Фон заголовков таблицы */
                color: #ffffff; /* Цвет шрифта заголовков */
            }

            .services-table th, .services-table td {
                padding: 10px;
                border: 1px solid #0d6efd; /* Границы ячеек */
            }

        /* Стили для названия услуги и цены */
        .service-name, .service-detail {
            font-weight: bold;
            font-size: 1.2em;
            color: #ffffff; /* Устанавливаем белый цвет текста */
        }
    </style>
</head>
<body class="bg-dark text-light">
    <div class="container">
        <h1 class="text-center my-4">Стрижки</h1>
        <table class="services-table">
            <thead>
                <tr>
                    <th>Услуга</th>
                    <th>Цена</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="service-name">Мужская стрижка</td>
                    <td class="service-detail">2100 руб</td>
                </tr>
                <tr>
                    <td class="service-name">Детская стрижка</td>
                    <td class="service-detail">1500 руб</td>
                </tr>
                <tr>
                    <td class="service-name">Стрижка машинкой Fade</td>
                    <td class="service-detail">1600 руб</td>
                </tr>
                <tr>
                    <td class="service-name">Стрижка машинкой </td>
                    <td class="service-detail">800 руб</td>
                </tr>
                <!-- Добавьте остальные услуги по аналогии -->
            </tbody>
        </table>

        <h1 class="text-center my-4">Борода и бритье</h1>
        <table class="services-table">
            <thead>
                <tr>
                    <th>Услуга</th>
                    <th>Цена</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="service-name">Моделирование бороды</td>
                    <td class="service-detail">1400 руб</td>
                </tr>
                <tr>
                    <td class="service-name">Стрижка усов и бороды</td>
                    <td class="service-detail">900 руб</td>
                </tr>
                <tr>
                    <td class="service-name">Бритьё опасной бритвой от DEPOT</td>
                    <td class="service-detail">1700 руб</td>
                </tr>
                <!-- Добавьте дополнительные услуги по аналогии -->
            </tbody>
        </table>
    </div>
</body>
</html>
